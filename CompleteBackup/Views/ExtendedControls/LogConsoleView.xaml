            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                --><!-- this is the body of the TabItem template--><!--
                <DataTemplate>
                    <TextBlock
                    Text="{Binding Name}" />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>-->


        <TabControl>
            <TabItem Header="General">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" >
                    <TextBlock Text="{Binding Project.Logger.LoggerData}" Foreground="Black" FontFamily="Consolas" Padding="8" TextWrapping="Wrap" />
                </ScrollViewer>
            </TabItem>
            <TabItem Header="{Binding Project.CurrentBackupProfile.Name}">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" >
                    <TextBlock Text="{Binding Project.CurrentBackupProfile.Logger.LoggerData}" Foreground="Black" FontFamily="Consolas" Padding="8" TextWrapping="Wrap" />
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!--<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" >
